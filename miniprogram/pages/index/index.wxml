<view>

    <view class="swiper">
      <swiper indicator-dots="{{indicatorDots}}"
        autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}">
        <block wx:for="{{ads}}" wx:key="*this">
          <swiper-item>
            <image src="{{item}}" class="swiper-item"/>
          </swiper-item>
        </block>
      </swiper>
    </view>

  <container class="container-box">
    <block wx:for="{{category}}" wx:key="*this">
      <view class="category-box">
        <text class="produce-text">{{item}}</text>
      </view>
    </block>
  </container>

  <container class="container-box">
    <block wx:for="{{posts}}" wx:key="*this">
      <view class="item-box">
          <image class="product-photo"/>
          <text class="product-text">{{item.title}}</text>
      </view>
    </block>
  </container>
</view>


